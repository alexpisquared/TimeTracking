<lnk:WindowBase xmlns:lnk="clr-namespace:AAV.WPF.Base;assembly=AAV.WPF" x:Name="wnd" x:Class="TimeTracker.View.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeTracker.View"
        mc:Ignorable="d"
        Title="MainWindow" Height="100" Width="200" WindowStyle="None" >
    <Border CornerRadius="8" BorderThickness="3" BorderBrush="Aqua">
        <Canvas Margin="0" x:Name="canvas" Background="#ccc">
            <Border CornerRadius="8" BorderThickness="3" BorderBrush="Aqua">
                <Grid Margin="10" Background="#ddd" >
                    <Button Content="_Save" Margin="10" Click="button_Click"/>
                </Grid>
            </Border>
        </Canvas>
    </Border>
</lnk:WindowBase>
